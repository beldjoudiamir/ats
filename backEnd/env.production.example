# Configuration de Production - ATS Application
# Copiez ce fichier vers .env et configurez vos valeurs

# Port du serveur
PORT=3000

# Configuration Email (Gmail SMTP)
EMAIL_USER=votre-email@gmail.com
EMAIL_PASS=votre-mot-de-passe-application-gmail

# Clé secrète JWT (Générez une clé forte et unique)
JWT_SECRET=votre-cle-secrete-jwt-super-forte-et-unique

# Configuration MongoDB Atlas (Production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/atsInfo

# Configuration de la base de données
MONGODB_DB=atsInfo
MONGODB_COLLECTION=users

# Environnement
NODE_ENV=production

# Configuration HTTPS (optionnel)
HTTPS_PORT=5443

# Configuration CORS (domaines autorisés)
CORS_ORIGIN=https://votre-domaine.com,http://localhost:5173

# Configuration des uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Configuration des logs
LOG_LEVEL=info 